<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:text="კითხვარი"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/usernameET"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:hint="შეიყვანეთ თქვენი სახელი"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/lastnameET"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_contact_page_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:hint="შეიყვანეთ თქვენი გვარი"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameET" />


    <EditText
        android:id="@+id/ageET"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_contact_page_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:inputType="number"
        android:hint="შეიყვანეთ თქვენი ასაკი"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastnameET" />

    <EditText
        android:id="@+id/jobET2"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="220dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/ic_baseline_contact_page_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bpg_nino_mtavruli_normal"
        android:hint="ხართ თუ არა დასაქმებული?"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageET" />

    <Button
        android:id="@+id/answersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5012E3CE"
        android:text="პასუხის გაცემა"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jobET2" />

</androidx.constraintlayout.widget.ConstraintLayout>